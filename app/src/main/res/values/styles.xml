<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailPoster">
        <item name="android:layout_height">@dimen/detailPosterHeight</item>
        <item name="android:layout_width">@dimen/detailPosterWidth</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="DetailTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/font_largest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailItalicText">
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="CastText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
